            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>*@
                        
                        <input type="checkbox" class="form-check-input" id="IS_FLOW_METER_SALED" tabindex="11" name="IS_FLOW_METER_SALED" value="@Model.CustomerDetails.IS_FLOW_METER_SALED" placeholder="Enter Is Flow Meter Saled"><label style="padding-left:25px;padding-right:25px;" for="exampleInputEmail1">Is Flow Meter Saled</label>


