                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>*@
    </div>
    <form id="form1" name="form1">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name<font color="red">*</font></label>
                            <input type="text" class="form-control" id="NAME" tabindex="1" name="NAME" value="@Model.CustomerDetails.NAME" placeholder="Enter customer Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Short Name<font color="red">*</font></label>
                            <input type="text" class="form-control" id="SHORT_NAME" tabindex="3" name="SHORT_NAME" value="@Model.CustomerDetails.SHORT_NAME" placeholder="Enter Customer Code">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address</label>
                            <input type="text" class="form-control" id="ADDRESS" tabindex="5" name="ADDRESS" value="@Model.CustomerDetails.ADDRESS" placeholder="Enter Address">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mob1</label>
                            <input type="text" class="form-control" id="MOB1" tabindex="7" name="MOB1" value="@Model.CustomerDetails.MOB1" placeholder="Enter Mobile Number">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mob2</label>
                            <input type="text" class="form-control" id="MOB2" tabindex="9" name="MOB2" value="@Model.CustomerDetails.MOB2" placeholder="Enter Mobile Number">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Deposite</label>
                            <input type="text" class="form-control" id="DEPOSITE" tabindex="11" name="DEPOSITE" value="@Model.CustomerDetails.DEPOSITE" placeholder="Enter Deposite">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="text" class="form-control" id="EMAIL_ID" tabindex="13" name="EMAIL_ID" value="@Model.CustomerDetails.EMAIL_ID" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select id="Archive" name="Active" class="form-control select2" value="@Model.CustomerDetails.ACTIVE" style="width: 100%;">
                            <option value="A">Active</option>
                            <option value="N">Archived</option>
                        </select>
                    </div>

                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Agreement Bill Number<font color="red">*</font></label>
                            <input type="text" class="form-control" id="AGREEMENT_BILL_NUMER" tabindex="2" name="AGREEMENT_BILL_NUMER" value="@Model.CustomerDetails.AGREEMENT_BILL_NUMER" placeholder="Enter Agrement Bill Number">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Register Date<font color="red">*</font></label>
                            <input type="text" class="form-control" id="REGISTER_DATE" tabindex="4" name="REGISTER_DATE" value="@Model.CustomerDetails.REGISTER_DATE" placeholder="Enter Register Date">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Is Flow Meter Saled<font color="red">*</font></label>
                            <input type="text" class="form-control" id="IS_FLOW_METER_SALED" tabindex="4" name="IS_FLOW_METER_SALED" value="@Model.CustomerDetails.IS_FLOW_METER_SALED" placeholder="Enter Is Flow Meter Saled">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Closed Date</label>
                            <input type="text" class="form-control" id="CLOSE_DATE" tabindex="10" name="CLOSE_DATE" value="@Model.CustomerDetails.CLOSE_DATE" placeholder="Enter Closed Date">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Deposite Refund Amount</label>
                            <input type="text" class="form-control" id="DEPOSITE_RETURENED_AMOUNT" tabindex="12" name="ZipCode" value="@Model.CustomerDetails.DEPOSITE_RETURENED_AMOUNT" placeholder="Enter Deposite Refund Amount">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Remarks</label>
                            <input type="text" class="form-control" id="REMARKS" tabindex="14" name="REMARKS" value="@Model.CustomerDetails.REMARKS" placeholder="Enter Remarks">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mode</label>
                            <input type="text" class="form-control" id="MODE" tabindex="16" name="MODE" value="@Model.CustomerDetails.MODE" placeholder="Enter Mode">
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </form>
    <div class="box-footer">
        <button id="First"class="btn btn-primary">Save</button>
        <button id="Second" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Save</button>
    </div>
    @*<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Launch demo modal
        </button>*@

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                    Save changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="savebtn" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>


