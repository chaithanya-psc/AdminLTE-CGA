    </div>
    <form id="form1" name="form1">
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name<font color="red">*</font></label>
                            <input type="text" class="form-control" id="NAME" tabindex="1" name="NAME" value="@Model.CustomerDetails.NAME" placeholder="Enter customer Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Address<font color="red">*</font></label>
                            <textarea class="form-control" style="height: 108px;" rows="5" id="ADDRESS" name="ADDRESS" tabindex="3" value="@Model.CustomerDetails.ADDRESS" placeholder="Enter Address"></textarea>
                            @*<input type="text" class="form-control" id="ADDRESS" tabindex="3" name="ADDRESS" value="@Model.CustomerDetails.ADDRESS" placeholder="Enter Address">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input type="text" class="form-control" id="EMAIL_ID" tabindex="6" name="EMAIL_ID" value="@Model.CustomerDetails.EMAIL_ID" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Register Date</label>
                            <input type="date" class="form-control" id="REGISTER_DATE" tabindex="8" name="REGISTER_DATE" value="@Model.CustomerDetails.REGISTER_DATE" placeholder="Enter Register Date">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
