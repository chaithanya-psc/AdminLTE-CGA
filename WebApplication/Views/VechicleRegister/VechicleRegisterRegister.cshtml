

@{
    ViewBag.Title = "VechicleRegister Details";
    ViewBag.SubTitle = "Team Map";
}

@section Menu {
    @Scripts.Render("~/Scripts/Bundle/VechicleRegister/VechicleRegister/menu")
}

@Styles.Render("~/AdminLTE/Bundle/plugins/daterangepicker/css")
@Styles.Render("~/AdminLTE/Bundle/plugins/colorpicker/css")
@Styles.Render("~/AdminLTE/Bundle/plugins/timepicker/css")
@Styles.Render("~/AdminLTE/Bundle/plugins/select2/css")
@Styles.Render("~/AdminLTE/Bundle/dist/css")
@Styles.Render("~/AdminLTE/Bundle/dist/css/skins")
@Styles.Render("~/Styles/Bundle/Elements/Modals")
<style>
    .error {
        color: red
    }
</style>
<div class="box box-default">
    <div class="box-header with-border">
        @*<h3 class="box-title">Select2</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>*@
    </div>
    <form id="form1" name="form1">
        <div class="box-body">
            <div class="row" style="  width: 25%;height:15%" hidden>
                @*<div class="col-md-6">
                        <div class="form-group">
                            <div class="form-group">

                                <img style="width: 125px;height:125px;display:block; background: url(../../Image/imageadd.jpg)  ;border:solid; object-fit: contain" id="blah" src="@Model.Image"   />
                            </div>
                            <label for="exampleInputEmail1">VechicleRegister logo</label>
                            <input type='file' id="imgInp" />
                        </div>
                    </div>*@
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Numer</label>
                            <input type="text" class="form-control required" id="Number" tabindex="1" name="Number" value="@Model.VechicleRegisterDetails.Number" placeholder="Enter Number">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Register Date</label>
                            <input type="date" class="form-control" id="RegisterDate" name="RegisterDate" tabindex="3" value="@Model.VechicleRegisterDetails.RegisterDate" placeholder="Enter Register Date">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Polution Date</label>
                            <input type="date" class="form-control" id="PolutionDate" name="PolutionDate" tabindex="4" value="@Model.VechicleRegisterDetails.PolutionDate" placeholder="Enter Polution Date">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Test Date</label>
                            <input type="date" class="form-control" id="TestDate" name="TestDate" tabindex="5" value="@Model.VechicleRegisterDetails.TestDate" placeholder="Enter Test Date">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Insurance Date</label>
                            <input type="date" class="form-control" id="InsuranceDate" name="InsuranceDate" tabindex="6" value="@Model.VechicleRegisterDetails.InsuranceDate" placeholder="Enter Insurance Date">
                        </div>
                    </div>


                </div>
                <div class="col-md-6">

                

                    <div class="form-group">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Remarks</label>
                            @* <input type="text" class="form-control" id="Remarks" name="Remarks" tabindex="6" value="@Model.VechicleRegisterDetails.Remarks" placeholder="Enter Remarks">*@
                            <textarea class="form-control" style="height: 108px;" rows="7" id="Remarks" name="Remarks" tabindex="2" value="@Model.VechicleRegisterDetails.Remarks" placeholder="Enter Remarks"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="box-footer">
        <button id="First" class="btn btn-primary">Save</button>
        <button id="Second" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Save</button>
    </div>

    @*<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
            Launch demo modal
        </button>*@

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                    Save changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" id="savebtn" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/AdminLTE/Bundle/plugins/select2/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/momentjs/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/colorpicker/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/timepicker/js")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/icheck/js")
    @Scripts.Render("~/Scripts/Bundle/Company/Advanced")
    @Scripts.Render("~/AdminLTE/Bundle/plugins/jquery-validate/js")
    <script type="text/javascript">
        $('#First').click(function(){
            if( !$("#form1").valid())
            {
                return
            }
            else{
                $('#Second').click()
            }
        })


            $(document).ready(function () {

                $('#Second').hide();
                $("#form1").validate({
                    rules: {
                        Number: {
                            required: true
                        },

                       

                    },
                    messages: {
                        Number: "Number is required"
                    }
                });
                $('#savebtn').click(function(){
                    if( !$("#form1").valid())
                    {
                        $('#myModal').modal('hide');
                        return
                    }
                    var data = {
                        Id: @Model.VechicleRegisterDetails.Id,
                        Number: $('#Number').val(),
                        RegisterDate: $('#RegisterDate').val(),
                        PolutionDate: $('#PolutionDate').val(),
                        TestDate: $('#TestDate').val(),
                        InsuranceDate: $('#InsuranceDate').val(),

                        Remarks: $('#Remarks').val()
                    }

                    var url='@Url.Action("SaveDetails", "VechicleRegister")';
                    $.ajax({
                        type:"POST",
                        url:url,
                        data: JSON.stringify(data) ,
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function () {
                            window.location.href= '@Url.Action("VechicleRegisterReport", "VechicleRegister")';
                        },
                        error: function () {
                            alert("Error while inserting data");
                        }
                    })
                });
            });
    </script>

}





