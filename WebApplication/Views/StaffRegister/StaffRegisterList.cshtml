<script>
    var i='N'
    function clickevent()
    {

            $('#btn').text('Show Archive');
            $('h3.box-title').text('Active StaffRegister List')
            GetData(i);
            i = 'N';

    }

    function GetData(status)
    {
        var url = '@Url.Action("GetStaffRegisterReport", "StaffRegister")';
        $.ajax({
            type: "POST",
            url: url,
            data: JSON.stringify({ Status: status }),
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (json) {
                var table = $('#example1').dataTable();
                table.fnClearTable(this);
                table.fnDestroy();
                var content = '';
                for (var i = 0; i < json.length; i++) {
                    content += '<tr>';
                    content += '<td>' + json[i].Name + '</td>';
                    
                    content += '<td>' + json[i].Mob1 + '</td>';
                   
                    content += '<td >  <button type="button" onclick="window.location.href=\'../StaffRegister/StaffRegisterRegister/' + json[i].Id + '\'"class="btn btn-block btn-primary"><span class="glyphicon glyphicon-edit"></span></button></td>';
                    content += '</tr>';
                }
                $('#example1 tbody').html(content);
                $("#example1").DataTable();
            },
            error: function () {
                // alert("Error while inserting data");
            }
        })
    }
</script>
